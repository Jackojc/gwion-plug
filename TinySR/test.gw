fun void load(string model) {
  model => sr.load => const int loaded;
  if(loaded == -1) {
    <<<"failed to load ", model, ".">>>;
    me.exit();
  }
  check();
  <<<"loaded ", loaded, " words from ", model, ".">>>;
  if(try)
     <<<"(after ", try, " tries)">>>;
  for(var int i; i < loaded; ++i)
    <<<"  * ", sr.word(i)>>>;
}

fun void check() {
  .5::second => now;
  if(sr.state()) {
    ++try => var string n;
    Machine.add(me.path() + ":" + n);
    me.exit();
  }
}

